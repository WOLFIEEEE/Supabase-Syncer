{
  "name": "suparbase",
  "description": "Database synchronization and keep-alive tool for Supabase",
  "build": {
    "type": "dockerfile",
    "dockerfile": "./Dockerfile",
    "context": ".",
    "args": {
      "NEXT_PUBLIC_SUPABASE_URL": "${NEXT_PUBLIC_SUPABASE_URL}",
      "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${NEXT_PUBLIC_SUPABASE_ANON_KEY}",
      "NEXT_PUBLIC_APP_URL": "${NEXT_PUBLIC_APP_URL}"
    }
  },
  "ports": {
    "3000": "3000"
  },
  "healthcheck": {
    "path": "/api/status",
    "interval": 30,
    "timeout": 10,
    "retries": 3
  },
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3000",
    "HOSTNAME": "0.0.0.0"
  }
}

